{
	"name": "be-shopee-order-hub",
	"version": "1.0.0",
	"description": "",
	"license": "ISC",
	"author": "",
	"type": "commonjs",
	"main": "server.js",
	"scripts": {
		"dev": "tsnd --respawn src/server.ts",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"start": "node dist/server.js",
		"prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
		"biome:fix": "biome format --write ./src",
		"biome:check": "biome check ./src"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"helmet": "^8.1.0",
		"mongodb": "^6.21.0",
		"mongoose": "^9.1.4",
		"multer": "^2.0.2",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.0.9",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --files-ignore-unknown=true",
			"biome check --write --no-errors-on-unmatched",
			"biome check --write --no-errors-on-unmatched",
			"biome check --write --unsafe --no-errors-on-unmatched",
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --no-errors-on-unmatched"
		],
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"engines": {
		"node": "24.12.0"
	}
}
